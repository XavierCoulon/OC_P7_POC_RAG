# ============================================
# OC_P7_POC_RAG - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ============================================
# API Keys
# ============================================

# Mistral API Key (for LLM and embeddings)
# Get your key from: https://console.mistral.ai/
MISTRAL_API_KEY = 'your_mistral_api_key_here'

# API Key for accessing the system
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY = 'your_secure_api_key_here'

# ============================================
# OpenAgenda Parameters
# ============================================

# Location Department for event filtering
# Pyrénées-Atlantiques (64)
LOCATION_DEPARTMENT = 'Pyrénées-Atlantiques'

# First date for event filtering (ISO 8601 format)
# Events from this date onwards will be fetched
FIRST_DATE = '2025-01-01T00:00:00'

# ============================================
# Embedding Provider Settings
# ============================================

# Default embedding provider: 'mistral' or 'huggingface'
DEFAULT_EMBEDDING_PROVIDER = 'mistral'

# HuggingFace Model for Embeddings (if using HF provider)
# Default: paraphrase-multilingual-MiniLM-L12-v2 (multilingual)
# Other options:
#   - all-MiniLM-L6-v2 (fast, CPU-friendly, English)
#   - all-mpnet-base-v2 (high quality)
HUGGINGFACE_MODEL_NAME = 'paraphrase-multilingual-MiniLM-L12-v2'

# ============================================
# Additional Settings
TOKENIZERS_PARALLELISM=false
